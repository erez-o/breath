{
get_extension name
get_extension name.ext
get_extension name.ext1.ext2
get_extension .dotfile
get_extension a/b/c/file.txt
get_extension ./a/file.txt
}       >   output

echo '

ext
ext2

txt
txt
'       >   expected_output

